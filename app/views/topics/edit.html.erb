<h1><%= 'Edit Topic'[] %></h1>

<%= error_messages_for :topic %>
<% form_for :topic,
     :url  => topic_path(@forum, @topic),
     :html => { :method => :put } do |f| -%>
<%= render :partial => "form", :object => f %>
<br />
<%= submit_tag 'Save Changes'[], :or => link_to('Cancel'[], topic_path(@forum, @topic)) %>
<% end -%>